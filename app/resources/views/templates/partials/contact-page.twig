	<div class="wrap-body">
		<header class="">
			<div class="logo">
				<img src="http://localhost/dnc/images/dnc-b.jpg" height="35%" width="35%"/>
			</div>

			<div class="social-media" style="position: absolute;top:0;right:0; padding-top:25px">
				<ul class="list-inline">
				    <li><a href="https://www.facebook.com/daniel.chongdnc">
				        <span class="fa-stack fa-lg icon-facebook social-icon">
				          <i class="fa fa-square fa-stack-2x"></i>
				          <i class="fa fa-facebook fa-stack-1x"></i>
				        </span>
				        </a></li>
				    <li><a href="#">
				        <span class="fa-stack fa-lg icon-instagram social-icon">
				          <i class="fa fa-square fa-stack-2x"></i>
				          <i class="fa fa-instagram fa-stack-1x"></i>
				        </span>
				    </a></li>
				    <li><a href="#">
				        <span class="fa-stack fa-lg icon-gplus social-icon">
				          <i class="fa fa-square fa-stack-2x"></i>
				          <i class="fa fa-plus fa-stack-1x"></i>
				        </span>
				        </a></li>
				</ul>
			</div>
		</header>

			<div id="cssmenu" class="align-center">
				<ul>
					<li><a href="{{path_for('home')}}"><span>Home</span></a></li>
					<li class="has-sub"><a href="#"><span>Gallery</span></a>
						<ul>
							<li class="has-sub sub-hover"><a href="{{path_for('wedding_ceremony')}}"><span>Wedding Ceremony</span></a></li>
							<li class="has-sub sub-hover"><a href="#"><span>Pre Wedding</span></a></li>
							<li class="has-sub sub-hover"><a href="#"><span>Couple</span></a></li>
							<li class="has-sub sub-hover"><a href="#"><span>Sister Hood</span></a></li>
							<li class="has-sub sub-hover"><a href="#"><span>Family</span></a></li>
							<li class="has-sub sub-hover"><a href="#"><span>Portrait</span></a></li>
						</ul>
					</li>
					<li><a href="{{path_for('about')}}"><span>About</span></a></li>
					<li class="active"><a href="{{path_for('contact')}}"><span>Contact</span></a></li>
				</ul>
			</div>
		<!--////////////////////////////////////Container-->
		<section id="container">
			<div class="wrap-container">
				<!-----------------Content-Box-------------------->
				<section class="content-box zerogrid">
					<div class="row wrap-box"><!--Start Box-->
						<h3 class="t-center" style="font-size: 30px;margin: 10px 0 30px">Contact Form</h3>
						<div id="contact_form">
							<form method="post" action="{{ path_for('contact') }}" autocomplete = "off" enctype="multipart/form-data"> 
								<label class="row">
									<div class="col-1-3">
										<div class="wrap-col">
											<input type="text" name="first" id="first" placeholder="Enter First Name" required="required" />
										</div>
									</div>
									<div class="col-1-3">
										<div class="wrap-col">
											<input type="text" name="last" id="last" placeholder="Enter Last Name" required="required" />
										</div>
									</div>
									<div class="col-1-3">
										<div class="wrap-col">
											<input type="text" name="email" id="email" placeholder="Enter email" required="required" />
										</div>
									</div>
									<div class="col-1-3">
										<div class="wrap-col">
											<input type="text" name="number" id="number" placeholder="Enter Phone Number" required="required" />
										</div>
									</div>
									<div class="col-1-3">
										<div class="wrap-col">
											<input type="text" name="venue" id="venue" placeholder="Enter Venue" required="required"/>
										</div>
									</div>
								</label>
								<div class="checkboxes">
								{% for service, index in data['services'] %}
									<label><input type="checkbox" name="services[]" id="services" value ="{{index}}" /> <span>{{service}}</span></label>
								{% endfor %}
								</div>



								<label class="row">
									<div class="wrap-col">
										<textarea name="message" id="message" class="form-control" rows="4" cols="25" required="required"
										placeholder="Message"></textarea>
									</div>
								</label>
								<center><input class="sendButton" type="submit" name="submitcontact" value="Submit"></center>
								{{ csrf.field | raw }}
							</form>
						</div>
					</div>
				</section>
				
			</div>
		</section>
	</div>
	
